<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>

<main>
  <!-- Hero Section -->
  <div class="p-5 text-center bg-image" style="
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    height: 300px;
  ">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="text-white">
        <h1 class="mb-3 display-3 fw-bold"><%= title %></h1>
        <p class="display-6">Let's connect and collaborate</p>
      </div>
    </div>
  </div>

  <!-- Contact Content -->
  <div class="container my-5">
    <div class="row">
      <div class="col-md-8 mx-auto">
        
        <!-- Contact Info Card -->
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h2 class="card-title"><i class="fas fa-address-card"></i> Get In Touch</h2>
            <p class="lead">Feel free to reach out to me for collaborations, projects, or just to connect!</p>
            
            <div class="contact-info mt-4">
              <div class="mb-3">
                <i class="fas fa-envelope fa-lg text-primary me-2"></i>
                <strong>Email:</strong> 
                <a href="mailto:aarrav.bala@ontariotechu.net">aarrav.bala@ontariotechu.net</a>
              </div>
              
              <div class="mb-3">
                <i class="fab fa-github fa-lg text-dark me-2"></i>
                <strong>GitHub:</strong> 
                <a href="https://github.com/aarravbalaotech" target="_blank">github.com/aarravbalaotech</a>
              </div>
              
              <div class="mb-3">
                <i class="fab fa-linkedin fa-lg text-primary me-2"></i>
                <strong>LinkedIn:</strong> 
                <a href="https://www.linkedin.com/in/aarrav-bala-353414355?lipi=urn%3Ali%3Apage%3Ad_flagship3_profile_view_base_contact_details%3B4hvS%2BOBHQJeEO3UyR6bY6A%3D%3D" target="_blank">Connect on LinkedIn</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Card -->
        <div class="card shadow-sm">
          <div class="card-body">
            <h2 class="card-title"><i class="fas fa-paper-plane"></i> Send Me a Message</h2>
            <form>
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Your Name" required>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" placeholder="your.email@example.com" required>
              </div>
              
              <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="subject" placeholder="What's this about?" required>
              </div>
              
              <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" rows="5" placeholder="Your message here..." required></textarea>
              </div>
              
              <button type="submit" class="btn btn-primary btn-lg w-100">
                <i class="fas fa-paper-plane"></i> Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Social Links Section -->
        <div class="text-center mt-5">
          <h3>Connect With Me</h3>
          <div class="social-links mt-3">
            <a href="https://github.com/aarravbalaotech" target="_blank" class="btn btn-dark btn-lg me-2">
              <i class="fab fa-github fa-2x"></i>
            </a>
            <a href="https://www.linkedin.com/in/aarrav-bala-353414355?lipi=urn%3Ali%3Apage%3Ad_flagship3_profile_view_base_contact_details%3B4hvS%2BOBHQJeEO3UyR6bY6A%3D%3D" target="_blank" class="btn btn-primary btn-lg">
              <i class="fab fa-linkedin fa-2x"></i>
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>
</main>

<%- include('partials/bottom_nav.ejs') %>
<%- include('partials/footer.ejs') %>
